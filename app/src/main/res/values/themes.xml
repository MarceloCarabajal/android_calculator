<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:textSize">@dimen/calc.btn.textSize</item>
    </style>

    <style name="Theme.MyCalculator" parent="Base.Theme.MyCalculator" />


    <!-- Button Numbers -->
    <style name="ButtonMD" parent="Theme.MyCalculator">
        <item name="colorPrimary">@color/background_color_button</item>
        <item name="colorControlHighlight">@color/background_color_button</item>
    </style>

    <!-- Button Operators -->
    <style name="ButtonMDDark" parent="Theme.MyCalculator">
        <item name="colorPrimary">@color/gray_700</item>
    </style>

    <!-- Button Result -->
    <style name="ButtonMDDarker" parent="Theme.MyCalculator">
        <item name="colorPrimary">@color/gray_800</item>
    </style>

    <!-- Button Clear -->
    <style name="ButtonMDDanger" parent="Theme.MyCalculator">
        <item name="colorPrimary">@color/red_500</item>
    </style>

</resources>